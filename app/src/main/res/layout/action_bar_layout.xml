<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_specify_toolbar"
    android:layout_width="match_parent"
    android:theme="@style/ToolbarTheme"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/inputfieldcolor"
    app:titleTextColor="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:textAppearance="@style/buttons_style"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/goCheckStatus"
        android:layout_width="60dp"
        android:layout_margin="5dp"
        android:drawableEnd="@drawable/check_status"
        android:layout_alignParentEnd="true"
        android:src="@drawable/check_status"
        android:layout_height="wrap_content"
        style="@style/ActionBarButtonWhite"

         />

</RelativeLayout>